{
    "name": "OLED Display (Python)",
    "version": "2024.12.20.001",
    "slug": "oled_display_python",
    "description": "This addon lets you display to your OLED provided with the ssd1306 OLED.",
    "arch": [
        "armhf",
        "armv7",
        "aarch64",
        "i386",
        "amd64"
    ],
    "log_level": "info",
    "startup": "services",
    "hassio_api": true,
    "auth_api": true,
    "ingress": false,
    "app_armor": true,
    "host_network": true,
    "privileged": [
        "SYS_ADMIN"
    ],
    "devices": [
        "/dev/i2c-1"
    ],
    "gpio": true,
    "stage": "experimental",
    "full_access": true,
    "url": "https://github.com/UCTRONICS/HomeAssistant/tree/main/UCTronics_OLED_Display_Python",
    "boot": "manual",
    "options": {
        "Show_Splash_Screen": true,
        "Show_Network_Info": true,
        "Show_Storage_Info": true,
        "Show_Memory_Info": true,
        "Show_CPU_Info": true,
        "Temperature_Unit": "C",
        "Slide_Duration": 5,
        "Stop_Auto_Run": false
    },
    "schema": {
        "Show_Splash_Screen": "bool",
        "Show_Network_Info": "bool",
        "Show_Storage_Info": "bool",
        "Show_Memory_Info": "bool",
        "Show_CPU_Info": "bool",
        "Temperature_Unit": "list(C|F)?",
        "Slide_Duration": "int",
        "Stop_Auto_Run": "bool"
    }
}